extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")       
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit",value="Loin")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=b430c9e161c49327a88a&allow_signup=false") Continue with Github &rarr;
    hr
    div
        span Don't have an account? 
        a(href="/join") Create one now &rarr;